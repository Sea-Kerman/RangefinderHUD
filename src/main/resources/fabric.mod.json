{
  "schemaVersion": 1,
  "id": "rangefinderhud",
  "version": "${version}",

  "name": "RangefinderHUD",
  "description": "Shows you how far away stuff is, useful for finding the dimensions of things.",
  "authors": [
    "Sea Kerman"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT",
  "icon": "assets/rangefinderhud/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.seakerman.rangefinderhud.RangefinderHUD"
    ],
    "modmenu": [
      "net.seakerman.rangefinderhud.config.RFHModMenu"
    ]
  },
  "mixins": [
    "rangefinderhud.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.22",

    "cloth-config": ">=12.0.109",

    "minecraft": "1.20.2",
    "java": ">=17"
  },
  "suggests": {
    "modmenu": ">=8.0.0"
  }
}
